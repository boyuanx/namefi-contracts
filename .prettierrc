{
  "$schema": "http://json.schemastore.org/prettierrc",
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "arrowParens": "always",
        "bracketSpacing": false,
        "endOfLine": "lf",
        "printWidth": 80,
        "semi": false,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.sol",
      "options": {
        "bracketSpacing": false,
        "printWidth": 80,
        "singleQuote": false,
        "tabWidth": 4,
        "useTabs": false
      }
    }
  ]
}
